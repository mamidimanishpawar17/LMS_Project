@model LMS_WEB.Models.DTO.Author.AuthorDTO



<form asp-action="DeleteAuthor">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Author</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="AuthorId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
               
                <span asp-validation-for="AuthorId" disabled class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
            
                <span asp-validation-for="Name" disabled class="text-danger"></span>
            </div>

        </div>
    </div>
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
